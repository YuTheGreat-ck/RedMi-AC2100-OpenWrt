CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_xiaomi_redmi-router-ac2100=y

# IPv6支持:
CONFIG_PACKAGE_6in4=y
CONFIG_PACKAGE_ipv6helper=y

# 貌似是开启FPU
#CONFIG_KERNEL_MIPS_FPU_EMULATOR=y # MIPS模拟FPU

CONFIG_PACKAGE_luci-app-dnsfilter=y # 基于dnsmasq的去广告
CONFIG_PACKAGE_luci-app-ramfree=n # luci-app-释放内存
# 以下软件包编译默认添加。如果需要，注释对应行即可。
CONFIG_PACKAGE_luci-app-accesscontrol=y
CONFIG_PACKAGE_luci-app-arpbind=y # arp绑定
CONFIG_PACKAGE_luci-app-autoreboot=y # 自动重启
CONFIG_PACKAGE_luci-app-nlbwmon=n # 宽带监控
CONFIG_PACKAGE_wol=y # 网络启动命令行程序
# 添加 sing-box
CONFIG_PACKAGE_sing-box=y
# 添加 naiveproxy (作为默认安装)
CONFIG_DEFAULT_naiveproxy=y
# 添加 luci-app-ssr-plus (作为默认安装)
CONFIG_DEFAULT_luci-app-ssr-plus=y

# 主题
CONFIG_PACKAGE_luci-theme-bootstrap=y

# dnsmasq
CONFIG_PACKAGE_dnsmasq=n
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_dnsmasq_full_dhcp=y
CONFIG_PACKAGE_dnsmasq_full_ipset=y
CONFIG_PACKAGE_luci-compat=y

# CONFIG_PACKAGE_coremark=y # CPU跑分
# CONFIG_COREMARK_OPTIMIZE_O3=y
# CONFIG_COREMARK_ENABLE_MULTITHREADING=y
# CONFIG_COREMARK_NUMBER_OF_THREADS=16

# linux软件包
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_bash=y
CONFIG_PACKAGE_tcpdump=y
